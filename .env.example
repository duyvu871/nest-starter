# Environment
NODE_ENV=development

# Application
APP_NAME=nest-basic-prisma
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=app
DB_SCHEMA=public

# Database URL (constructed from above variables)
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=${DB_SCHEMA}"

# Docker Database Config
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=${DB_NAME}

# Docker Ports
DEV_DB_PORT=5432
PROD_DB_PORT=5554

# Jobs
TZ=Asia/Ho_Chi_Minh
# every 2 minutes
EXAMPLE_CRON=*/2 * * * *

# Health Check Configuration
# Set to 'true' to enable detailed health endpoints in production
# Default: false (only /health/live is available in production)
HEALTH_ENDPOINTS_ENABLED=false

# Security & Monitoring
JWT_ACCESS_SECRET=your-super-secret-access-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="${APP_NAME} <${SMTP_USER}>"
EMAIL_TEMPLATES_PATH=src/module/email/templates

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# Rate Limiting (Optional)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Security
BCRYPT_ROUNDS=12

# Monitoring (Optional)
PROMETHEUS_ENABLED=false
METRICS_PORT=9090